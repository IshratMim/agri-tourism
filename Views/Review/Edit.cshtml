@model ReviewSystem.Models.Review

<h2>Edit Review</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" value="@Model.User.Username" disabled />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" value="@Model.User.Email" disabled />
    </div>
    <div class="form-group">
        <label>Rating</label>
        <input type="number" asp-for="Rating" class="form-control" min="1" max="5" required />
    </div>
    <div class="form-group">
        <label>Comment</label>
        <textarea asp-for="Comment" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
    
</form>
